@section scripts {


    <script>

            $(document).ready(function () {
                $('#startDate').change(function () {

                    var date = new Date(this.value);
                    var b = document.getElementById("endDate")
                    b.setAttribute("min", date.toISOString().substring(0, 10));

                });
            });


    </script>
