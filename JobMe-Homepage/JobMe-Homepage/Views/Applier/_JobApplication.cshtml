@model JobMe_Homepage.Models.VMApplierAndApplication

<!-- #region Deployement-->
<div class="col-sm-12" id="experience-col">
    @if (TempData["Success"] != null)
    {
    <p class="text-success" id="successMessage">@TempData["Success"]</p>
    }
    <div class="row" id="profileInfoRight">
        
            <p id="ApplicationHeadline">Personlig Ansøgninger:</p>
 
   


        @foreach (var jobApplication in Model.JobApplicationList)
        {

           
            <form action="/Applier/UpdateApplication" method="post">
                <div class="form-group">
                    <label class="applicationJobTitle" for="jobTitel">Titel:</label>
                    <input type="text" name="title" value="@jobApplication.Title" class="form-control" id="jobTitel" />
                </div>
                <div class="form-group">
                    <label for="description">Beskrivelse:</label>
                    <textarea name="description" class="form-control textareaApplication" id="description">@jobApplication.Description</textarea>
                </div>
                
                
                <input type="hidden" name="id" value="@jobApplication.Id" />
                <div class="col-sm-6">
                 
                    <a class="btn btn-danger btneditapplication" data-toggle="modal" data-target="#DeleteModal" href="#DeleteModal">Slet</a>
               </div>
                <div class="col-sm-6">
                    
                    <button type="submit" class="btn btn-default btn-blue btndeleteapplication">Gem ansøgning</button>

                </div>

               
                </form>

                 <!-- Modal -->
                <div class="modal fade" id="DeleteModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4>Er du sikker på du vil slette?</h4>
                            <div class="modal-body">
                              
                                <a class="btn btn-danger" href="/Applier/DeleteApplication/@jobApplication.Id">Ja jeg er sikker</a>
                               
                             
                        </div>

                    </div>

                </div> </div>



        }


</div>

    <div class="row" id="seperator">
        <div class="col-sm-12"></div>
    </div>
    <div class="row">
<h2 class="createApplication">Opret ny ansøgning</h2>
        <form action="/Applier/CreateApplication" method="post">
            <div class="form-group">
                <label for="jobTitel">Titel:</label>
                <input type="text" name="title" class="form-control" id="jobTitel" />
            </div>
            <div class="form-group">
                <label for="description">Beskrivelse:</label>
                <textarea name="description" class="form-control textareaApplication" id="description"> </textarea>
            </div>


            <input type="hidden" name="applierId" value="@Model.Applier.Id" />
            <div class="col-sm-12">
                
                <button type="submit" class="btn btn-default btn-blue createApplicationBtn">Opret ny ansøgning</button>


            </div>

        </form>

    </div>

    </div>
        <!--#endregion-->
