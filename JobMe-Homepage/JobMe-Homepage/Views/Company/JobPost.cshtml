@model JobMe_Homepage.JobPostServiceReference.JobPost
@{
    ViewBag.Title = "JobPost";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}
<!--#region jobPost infomation-->
<div class="container body-content">
    <div class=" panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12" id="jobPostLeftContent">
                    <div class="row">
                        <div class="col-sm-8">
                            <!-- Basic contact info and jobpost info-->
                            <p id="jobPostTitle">@Model.Title</p>
                            <div class="jobPostBasicInfo">Annonce oprettet af @Model.company.CompanyName i @Model.jobCategory.Title</div>
                            <div class="jobPostBasicInfo">Ansættelse: @Model.workHours.Type</div>
                            <div class="jobPostBasicInfo">Ansøgnings periode: @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</div>
                            <div class="jobPostBasicInfo">Lokation: @Model.Address</div>
                        </div>
                        <div class="col-sm-4">
                            <!--Profile image from the company!-->
                            @if (Model.company.ImageURL != null)
                            {
                                <img src="@Model.company.ImageURL" id="jobPostCompanyPic" class="img-responsive" />
                            }
                            else
                            {
                                <img src="/Content/image/JobMeHorizontal.png" id="jobPostCompanyPic" class="img-responsive" />
                            }

                        </div>
                    </div>
                    <!--Seperator-->
                    <div class="row" id="seperator"></div>
                    <div id="seperatorStyling"></div>
                    <div class="col-sm-2" id="descriptionText">Beskrivelse:</div>
                    <div class="col-sm-10" id="descriptionBodyText">
                        @Model.Description
                    </div>
                    <div class="col-sm-2" id="descriptionText">Kategori:</div>
                    <div class="col-sm-10" id="descriptionBodyText">
                        @Model.jobCategory.Title
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
