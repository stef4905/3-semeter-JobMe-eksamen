<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/simplePagination.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand"><img src="~/Content/image/JobMeHorizontal.png" class="img-responsive logo" alt="JobMe Logo" /></a>  <!--make link to User startpage -->

            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#opretModal" data-toggle="modal" data-target="#opretModal">Opret</a></li>

                    <li><a href="#opretModal" data-toggle="modal" data-target="#loginModal">Login</a></li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <!-- Modal -->
        <div class="modal fade" id="opretModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4>Opret Profil</h4>
                    <div class="modal-body">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#Jobansoger">Jobansøger</a></li>
                            <li><a href="#Virksomhed">Virksomhed</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="Jobansoger" class="tab-pane fade in active">
                                @Html.Partial("_CreateApplier", "Applier")
                            </div>
                            <div id="Virksomhed" class="tab-pane fade">
                                @Html.Partial("_CreateCompany", "Company")
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <div class="modal fade" id="loginModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4>Opret Profil</h4>
                    <div class="modal-body">

                        @Html.Partial("_Login", "Company")


                    </div>
                </div>
            </div>

        </div>





        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.validate.min.js"></script>


    <!-- Script for Modal Tabs -->
    <script>
        $(document).ready(function () {
            $(".nav-tabs a").click(function () {
                $(this).tab('show');
            });
        });
    </script>

</body>
</html>
