<ul class="nav nav-tabs" id="login">
    <li class="active" id="job"><a href="#LoginApplier">Jobsøgende Login</a></li>
    <li class="" id="company"><a href="#LoginCompany">Virksomhed Login</a></li>
</ul>
<div class="tab-content">
    <div id="LoginApplier" class="tab-pane fade in active">
        <form action="/Applier/_Login" method="post">

            @if (TempData["Fail"] != null)
            {
                <p class="text-danger">Email eller kodeord er forkert</p>
            }

            <div class="form-group">
                <label for="email">Email addresse:</label>
                <input type="email" name="Email" class="form-control" id="email" required>
            </div>
            <div class="form-group">
                <label for="pwd">Kodeord:</label>
                <input type="password" name="Password" class="form-control" id="password" required>
            </div>
            <div class=" col-sm-2">
                <button type="submit" class="btn btn-default btn-blue pull-right">Login</button>
            </div>
        </form>
    </div>
    <div id="LoginCompany" class="tab-pane fade">
        <form action="/Company/_Login" method="post">
            <p class="text-danger" id="failtext"></p>
            <div class="form-group">
                <label for="email">Email addresse:</label>
                <input type="email" name="Email" class="form-control" id="email" required>
            </div>
            <div class="form-group">
                <label for="pwd">Kodeord:</label>
                <input type="password" name="Password" class="form-control" id="password" required>
            </div>
            <div class=" col-sm-2">
                <button type="submit" class="btn btn-default btn-blue pull-right">Login</button>
            </div>
        </form>
    </div>
</div>


